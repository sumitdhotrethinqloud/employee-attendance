{
  "name": "Employee Attendance Logger",
  "description": "Track employee check-in and check-out with geolocation and timestamps.",
  "version": "1.0.0",
  "integration": {
    "access_scopes": [
      "boards:read",
      "boards:write",
      "account:read",
      "updates:write",
      "users:read"
    ]
  },
  "features": [
    {
      "name": "Main App View",
      "kind": "board_view",
      "url": "https://employee-attendance.netlify.app",
      "method": "iframe"
    },
    {
      "name": "Settings",
      "kind": "app_settings",
      "url": "https://employee-attendance.netlify.app/settings",
      "method": "iframe"
    }
  ],  
  
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "logo192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
}
